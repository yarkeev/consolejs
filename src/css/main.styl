@import "nib";

.b-web-console {
	position: fixed;
	top: 0;
	left: 0;
	width: 100%;
	height: 200px;
	z-index: 10000;
	background-color: #000;
	color: #fff;
	opacity: .7;
	font-family: Arial, sans-serif;
	font-size: 12px;
	transition: opacity .3s, top .3s;

	&.hide {
		top: -200px;
	}

	&:hover {
		opacity: 1;
	}

	&__output {
		position: absolute;
		top: 0;
		bottom: 25px;
		width: 100%;
		padding-left: 5px;
		overflow: auto;
	}

	&__input {
		position: absolute;
		display: block;
		top: 0;
		left: 20px;
		width: 100%;
		height: 25px;
		line-height: 20px;
		border: none;
		box-sizing: border-box;
		background-color: #000;
		color: #fff;
		outline: none;

		&-wrapper {
			position: absolute;
			left: 0;
			bottom: 0;
			height: 25px;
			width: 100%;
			background-color: #000;

			&:before {
				content: '$';
				position: absolute;
				display: block;
				top: 7px;
				left: 5px;
				color: #fff;
			}
		}
	}
}